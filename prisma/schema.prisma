generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                         String      @id @default(cuid())
  username                   String?
  iconUrl                    String?     @map("icon_url")
  nativeLanguageId           String?     @map("native_language_id")
  defaultLearningLanguageId  String?     @map("default_learning_language_id")
  email                      String      @unique
  stripeCustomerId           String?     @map("stripe_customer_id")
  remainingPhraseGenerations Int         @default(0) @map("remaining_phrase_generations")
  lastPhraseGenerationDate   DateTime?   @map("last_phrase_generation_date")
  lastDailySpeakCountResetDate DateTime? @map("last_daily_speak_count_reset_date")
  remainingSpeechCount       Int         @default(0) @map("remaining_speech_count")
  createdAt                  DateTime    @default(now()) @map("created_at")
  updatedAt                  DateTime    @updatedAt @map("updated_at")
  deletedAt                  DateTime?   @map("deleted_at")
  phrases                    Phrase[]
  situations                 Situation[]
  defaultLearningLanguage    Language?   @relation("UserLearningLanguage", fields: [defaultLearningLanguageId], references: [id])
  nativeLanguage             Language?   @relation("UserNativeLanguage", fields: [nativeLanguageId], references: [id])
  speeches                   Speech[]

  @@map("users")
}

model Language {
  id            String    @id @default(cuid())
  name          String
  code          String    @unique
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")
  phrases       Phrase[]
  learningUsers User[]    @relation("UserLearningLanguage")
  nativeUsers   User[]    @relation("UserNativeLanguage")
  speechesLearning  Speech[]  @relation("SpeechLearningLanguage")
  speechesNative    Speech[]  @relation("SpeechNativeLanguage")

  @@map("languages")
}

model PhraseLevel {
  id        String    @id @default(cuid())
  name      String
  score     Int
  color     String?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  phrases   Phrase[]

  @@map("phrase_levels")
}

model Phrase {
  id                 String       @id @default(cuid())
  userId             String       @map("user_id")
  languageId         String       @map("language_id")
  original           String
  translation        String
  explanation        String?
  totalSpeakCount    Int          @default(0) @map("total_speak_count")
  dailySpeakCount    Int          @default(0) @map("daily_speak_count")
  lastSpeakDate      DateTime?    @map("last_speak_date")
  lastQuizDate       DateTime?    @map("last_quiz_date")
  sessionSpoken      Boolean      @default(false) @map("session_spoken")
  correctQuizCount   Int          @default(0) @map("correct_quiz_count")
  incorrectQuizCount Int          @default(0) @map("incorrect_quiz_count")
  phraseLevelId      String       @map("phrase_level_id")
  speechId           String?      @map("speech_id")
  speechOrder        Int?         @map("speech_order")
  createdAt          DateTime     @default(now()) @map("created_at")
  updatedAt          DateTime     @updatedAt @map("updated_at")
  deletedAt          DateTime?    @map("deleted_at")
  language           Language     @relation(fields: [languageId], references: [id])
  phraseLevel        PhraseLevel  @relation(fields: [phraseLevelId], references: [id])
  user               User         @relation(fields: [userId], references: [id])
  speech             Speech?      @relation("SpeechPhrases", fields: [speechId], references: [id])
  quizResults        QuizResult[]
  speakLogs          SpeakLog[]

  @@index([userId, languageId, createdAt(sort: Desc)], map: "idx_phrases_user_language_created")
  @@index([userId, createdAt(sort: Desc)], map: "idx_phrases_user_created")
  @@map("phrases")
}

model QuizResult {
  id        String    @id @default(cuid())
  phraseId  String    @map("phrase_id")
  date      DateTime
  correct   Boolean
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  phrase    Phrase    @relation(fields: [phraseId], references: [id])

  @@map("quiz_results")
}

model SpeakLog {
  id        String    @id @default(cuid())
  phraseId  String    @map("phrase_id")
  date      DateTime
  count     Int       @default(1)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  phrase    Phrase    @relation(fields: [phraseId], references: [id])

  @@map("speak_logs")
}

model Situation {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  user      User      @relation(fields: [userId], references: [id])

  @@map("situations")
}

model Speech {
  id                 String    @id @default(cuid())
  userId             String    @map("user_id")
  title              String
  learningLanguageId String    @map("learning_language_id")
  nativeLanguageId   String    @map("native_language_id")
  statusId           String    @map("status_id")
  firstSpeechText    String    @map("first_speech_text")
  audioFilePath      String?   @map("audio_file_path")
  notes              String?
  practiceCount      Int       @default(0) @map("practice_count")
  lastPracticedAt    DateTime? @map("last_practiced_at")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  deletedAt          DateTime? @map("deleted_at")
  user               User      @relation(fields: [userId], references: [id])
  learningLanguage   Language  @relation("SpeechLearningLanguage", fields: [learningLanguageId], references: [id])
  nativeLanguage     Language  @relation("SpeechNativeLanguage", fields: [nativeLanguageId], references: [id])
  status             SpeechStatus @relation(fields: [statusId], references: [id])
  feedbacks          SpeechFeedback[]
  plans              SpeechPlan[]
  phrases            Phrase[]  @relation("SpeechPhrases")

  @@map("speeches")
}

model SpeechFeedback {
  id         String    @id @default(cuid())
  speechId   String    @map("speech_id")
  category   String
  content    String
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")
  speech     Speech    @relation(fields: [speechId], references: [id])

  @@map("speech_feedbacks")
}

model SpeechPlan {
  id               String    @id @default(cuid())
  speechId         String    @map("speech_id")
  planningContent  String    @map("planning_content")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  deletedAt        DateTime? @map("deleted_at")
  speech           Speech    @relation(fields: [speechId], references: [id])

  @@map("speech_plans")
}

model SpeechStatus {
  id          String    @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")
  speeches    Speech[]

  @@map("speech_statuses")
}